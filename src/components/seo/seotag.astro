---
import { SITE_URL } from "@/data/config";
import type { Head } from "@/utils/types";
import { SEO } from "astro-seo";

type Props = Head;

const { title, description, noindex, og } = Astro.props;

const DEFAULT_TITLE_PAGE = "Ibrahim Raimi â€” Software Engineer";
const DEFAULT_PAGE_DESCRIPTION =
  "Software Engineer based in the not-so-stress-free city of Lagos, Nigeria focused on helping brands create interactive digital experiences on the web.";
const DEFAULT_SITE_URL = SITE_URL;

const openGraph = {
  title: title || og.title || DEFAULT_TITLE_PAGE,
  type: og.type || "website",
  image: og?.image || "/opengraph-image.png",
  alt: og.alt || "Ibrahim Raimi website image",
  url: DEFAULT_SITE_URL,
  description: og.description || DEFAULT_PAGE_DESCRIPTION,
};
---

<head>
  <SEO
    charset="UTF-8"
    title={title || DEFAULT_TITLE_PAGE}
    description={description || DEFAULT_PAGE_DESCRIPTION}
    noindex={noindex || false}
    openGraph={{
      basic: {
        title: openGraph.title,
        type: openGraph.type,

        image: openGraph.image,
      },
      image: {
        alt: openGraph.alt,
      },
    }}
    twitter={{
      creator: "@ibrahimraimi_",
    }}
    extend={{
      link: [
        { rel: "icon", href: "/favicon.svg" },
        { rel: "sitemap", href: "/sitemap-index.xml" },
      ],
      meta: [
        { name: "viewport", content: "width=device-width, initial-scale=1" },
        { name: "generator", content: Astro.generator },
        {
          name: "twitter:image",
          content: openGraph.image,
        },
        { name: "twitter:card", content: "summary_large_image" },
        { name: "twitter:title", content: openGraph.title },
        { name: "twitter:description", content: openGraph.description },
        { name: "twitter:site", content: "@itsstormzz_" },
      ],
    }}
  />
</head>
